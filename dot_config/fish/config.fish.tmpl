# Yazi file manager - change to last visited directory
function j
    load_env
    set -l tmp (mktemp -t "yazi-cwd.XXXXXX")
    # I don't remember why this was needed
    # set -x TERM xterm-kitty
    yazi $argv --cwd-file="$tmp" 2>/dev/null
    if set -l cwd (cat -- "$tmp"); and test -n "$cwd"; and test "$cwd" != "$PWD"
        cd -- "$cwd"
    end
    rm -f -- "$tmp"
end

# Other aliases
# ncdu function to handle both gdu and gdu-go
function ncdu
    if type -q gdu
        gdu $argv
    else if type -q gdu-go
        gdu-go $argv
    else
        echo "Error: Neither 'gdu' nor 'gdu-go' is installed."
        return 1
    end
end

