# Enhanced PATH management
function path_prepend
    set -l dir $argv[1]
    if test -d "$dir"; and not contains "$dir" $PATH
        set -gx PATH "$dir" $PATH
    end
end

function path_append
    set -l dir $argv[1]
    if test -d "$dir"; and not contains "$dir" $PATH
        set -gx PATH $PATH "$dir"
    end
end

