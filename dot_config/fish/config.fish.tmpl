# Function to load environment variables from a file
function load_env
    set -l env_file $argv[1]
    if test -z "$env_file"
        set env_file ~/.env
    end

    if test -f "$env_file"
        for line in (cat "$env_file" | grep -v '^#' | grep -v '^$')
            set -l parts (string split -m 1 '=' -- $line)
            if test (count $parts) -eq 2
                set -gx $parts[1] $parts[2]
            end
        end
    end
end

